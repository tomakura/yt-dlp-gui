{
  "name": "yt-dlp-gui",
  "version": "1.3.2",
  "description": "A GUI for yt-dlp",
  "author": "tomakura",
  "private": true,
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "dev:electron": "cross-env VITE_DEV_SERVER_URL=http://localhost:1420 electron dist-electron/main.js",
    "dev:app": "concurrently -k \"npm run dev\" \"npm run dev:electron\"",
    "build": "npm run build:frontend && electron-builder",
    "build:frontend": "tsc -p tsconfig.electron.json && vite build",
    "build:all": "npm run build:frontend && electron-builder --mac --win --x64 --arm64",
    "electron:build": "electron-builder",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
  },
  "dependencies": {
    "ffmpeg-static": "^5.2.0",
    "framer-motion": "^11.11.11",
    "lucide-react": "^0.460.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "yt-dlp-exec": "^1.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@types/node": "^22.9.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "^33.2.0",
    "electron-builder": "^25.1.8",
    "eslint": "^9.13.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "globals": "^15.11.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.11.0",
    "vite": "^5.4.10"
  },
  "build": {
    "appId": "com.tomakura.ytdlpgui",
    "productName": "yt-dlp GUI",
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "files": [
      "dist/**",
      "dist-electron/**",
      "build/**",
      "package.json"
    ],
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        }
      ],
      "artifactName": "yt-dlp-GUI-${version}-universal.${ext}"
    },
    "win": {
      "target": "nsis",
      "artifactName": "yt-dlp-GUI-Setup-${version}-${arch}.${ext}",
      "forceCodeSigning": false
    }
  }
}